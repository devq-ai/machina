# Machina Registry Service Environment Configuration Template
# Copy this file to .env and update the values for your environment

# Application Configuration
PROJECT_NAME=Machina Registry Service
VERSION=1.0.0
API_V1_STR=/api/v1
DEBUG=true
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database Configuration
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=machina_registry
# DATABASE_URI=postgresql+asyncpg://postgres:postgres@localhost:5432/machina_registry

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
# REDIS_URI=redis://localhost:6379/0

# Cache Configuration
CACHE_TTL=3600
CACHE_PREFIX=machina:registry:

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logfire Configuration (DevQ.ai Observability)
LOGFIRE_TOKEN=pylf_v1_us_your_token_here
LOGFIRE_PROJECT_NAME=machina-registry
LOGFIRE_SERVICE_NAME=machina-registry
LOGFIRE_ENVIRONMENT=development

# MCP Configuration
MCP_SERVER_NAME=machina-registry
MCP_SERVER_VERSION=1.0.0
MCP_TOOLS_ENABLED=true

# Registry Configuration
REGISTRY_HEALTH_CHECK_INTERVAL=30
REGISTRY_MAX_RETRIES=3
REGISTRY_TIMEOUT=10

# CORS Configuration
CORS_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*

# Performance Configuration
MAX_CONNECTIONS=100
POOL_SIZE=10
POOL_OVERFLOW=20

# Development Tools (Optional)
# ANTHROPIC_API_KEY=sk-ant-your_key_here
# PERPLEXITY_API_KEY=pplx-your_key_here
